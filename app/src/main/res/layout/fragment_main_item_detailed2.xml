<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/fragmainitemdetailed2_mode_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/md_orange">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EDIT MODE"
            android:textSize="15pt"
            android:textStyle="bold" />
        <com.github.nikartm.button.FitButton
            android:id="@+id/fragmainitemdetailed2_btn_modifications_save"
            android:layout_alignParentEnd="true"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="20dp"
            app:fb_icon="@drawable/ic_save"
            app:fb_iconColor="@color/md_green"
            app:fb_iconHeight="44dp"
            app:fb_iconPosition="center"
            app:fb_iconWidth="44dp"
            app:fb_rippleColor="@color/theme_dark_red_primary_color" />

        <com.github.nikartm.button.FitButton
            android:id="@+id/fragmainitemdetailed2_btn_modifications_discard"
            android:layout_alignParentStart="true"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="20dp"
            app:fb_icon="@drawable/ic_discard"
            app:fb_iconColor="@color/md_red"
            app:fb_iconHeight="44dp"
            app:fb_iconPosition="center"
            app:fb_iconWidth="44dp"
            app:fb_rippleColor="@color/theme_dark_red_primary_color" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragmainitemdetailed2_buttomtoolbar"
        android:layout_below="@id/fragmainitemdetailed2_mode_cover"
        android:fillViewport="false"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.haozhang.lib.SlantedTextView
                android:id="@+id/fragmainitemdetailed2_slanted_itemtype"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                app:slantedBackgroundColor="@color/black"
                app:slantedLength="40dp"
                app:slantedMode="right"
                app:slantedText="N. S. Yet"
                app:slantedTextColor="@color/white"
                app:slantedTextSize="6pt" />

            <TextView
                android:id="@+id/fragmainitemdetailed2_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:inputType="none"
                android:minHeight="48dp"
                android:text="Long Title Long Title Long Title Long Title Long Title Long Title "
                android:textSize="15pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragmainitemdetailed2_tv_title"
                android:orientation="vertical">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/fragmainitemdetailed2_chipgroup_authors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.google.android.material.chip.ChipGroup>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/fragmainitemdetailed2_chipgroup_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.google.android.material.chip.ChipGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Attachments:"
                            android:textStyle="bold"/>

                        <com.github.nikartm.button.FitButton
                            android:id="@+id/fragmainitemdetailed2_attachments_btn_add"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_alignParentEnd="true"
                            app:fb_icon="@drawable/ic_add"
                            app:fb_iconColor="@color/black"
                            app:fb_iconHeight="44dp"
                            app:fb_iconPosition="center"
                            app:fb_iconWidth="44dp"
                            app:fb_rippleColor="@color/theme_dark_red_primary_color" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/fragmainitemdetailed2_attachments_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="100dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Document Type:"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/fragmainitemdetailed2_spinner_itemtype"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4" />
                </LinearLayout>

                <com.skydoves.expandablelayout.ExpandableLayout
                    android:id="@+id/fragmainitemdetailed2_exp_authors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:expandable_animation="normal"
                    app:expandable_duration="300"
                    app:expandable_isExpanded="false"
                    app:expandable_parentLayout="@layout/expandable_authors_header"
                    app:expandable_secondLayout="@layout/expandable_authors"
                    app:expandable_spinner_color="@color/md_lime"
                    app:expandable_spinner_gravity="end"
                    app:expandable_spinner_size="20dp" />

                <com.skydoves.expandablelayout.ExpandableLayout
                    android:id="@+id/fragmainitemdetailed2_exp_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:expandable_animation="normal"
                    app:expandable_duration="300"
                    app:expandable_isExpanded="false"
                    app:expandable_parentLayout="@layout/expandable_tags_header"
                    app:expandable_secondLayout="@layout/expandable_tags"
                    app:expandable_spinner_color="@color/md_lime"
                    app:expandable_spinner_gravity="end"
                    app:expandable_spinner_size="20dp" />

                <com.skydoves.expandablelayout.ExpandableLayout
                    android:id="@+id/fragmainitemdetailed2_exp_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:expandable_animation="normal"
                    app:expandable_duration="300"
                    app:expandable_isExpanded="false"
                    app:expandable_parentLayout="@layout/expandable_notes_header"
                    app:expandable_secondLayout="@layout/expandable_notes"
                    app:expandable_spinner_color="@color/md_lime"
                    app:expandable_spinner_gravity="end"
                    app:expandable_spinner_size="20dp" />

                <com.skydoves.expandablelayout.ExpandableLayout
                    android:id="@+id/fragmainitemdetailed2_exp_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:expandable_animation="normal"
                    app:expandable_duration="300"
                    app:expandable_isExpanded="false"
                    app:expandable_parentLayout="@layout/expandable_fields_header"
                    app:expandable_secondLayout="@layout/expandable_fields"
                    app:expandable_spinner_color="@color/md_lime"
                    app:expandable_spinner_gravity="end"
                    app:expandable_spinner_size="20dp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/fragmainitemdetailed2_buttomtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="4dp"
        android:background="@color/dark_grey"
        >
        <com.github.nikartm.button.FitButton
            android:id="@+id/fragmainitemdetailed2_btn_drawer"
            android:layout_alignParentStart="true"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="20dp"
            app:fb_icon="@drawable/ic_menu"
            app:fb_iconColor="@color/white"
            app:fb_iconHeight="44dp"
            app:fb_iconPosition="center"
            app:fb_iconWidth="44dp"
            app:fb_rippleColor="@color/theme_dark_red_primary_color" />

        <com.github.nikartm.button.FitButton
            android:id="@+id/fragmainitemdetailed2_btn_itemdelete"
            android:layout_alignParentEnd="true"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:fb_icon="@drawable/ic_delete_vector"
            app:fb_iconColor="@color/md_red_800"
            app:fb_iconHeight="44dp"
            app:fb_iconPosition="center"
            app:fb_iconWidth="44dp"
            app:fb_rippleColor="@color/theme_dark_red_primary_color" />

        <com.github.nikartm.button.FitButton
            android:id="@+id/fragmainitemdetailed2_btn_itemedit"
            android:layout_toLeftOf="@id/fragmainitemdetailed2_btn_itemdelete"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="20dp"
            app:fb_icon="@drawable/ic_edit"
            app:fb_iconColor="@color/md_orange_500"
            app:fb_iconHeight="44dp"
            app:fb_iconPosition="center"
            app:fb_iconWidth="44dp"
            app:fb_rippleColor="@color/theme_dark_red_primary_color" />

    </RelativeLayout>
</RelativeLayout>