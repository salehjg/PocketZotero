<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:are="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:id="@+id/expndd_notes_editor_scrollview"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:nestedScrollingEnabled="true">

            <com.chinalwb.are.AREditor
                android:id="@+id/expndd_notes_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:visibility="visible"
                are:expandMode="FULL"
                are:hideToolbar="false"
                are:toolbarAlignment="TOP"
                android:nestedScrollingEnabled="true"/>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/expndd_notes_ll_btns_all"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expndd_notes_editor_scrollview"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <com.github.nikartm.button.FitButton
            android:id="@+id/expndd_notes_btn_add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            app:fb_icon="@drawable/ic_add"
            app:fb_iconColor="@color/black"
            app:fb_iconHeight="33dp"
            app:fb_iconPosition="center"
            app:fb_iconWidth="33dp"
            app:fb_rippleColor="@color/purple_200" />
        <LinearLayout
            android:id="@+id/expndd_notes_ll_btns_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">
            <com.github.nikartm.button.FitButton
                android:id="@+id/expndd_notes_btn_save"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                app:fb_icon="@drawable/ic_save"
                app:fb_iconColor="@color/black"
                app:fb_iconHeight="33dp"
                app:fb_iconPosition="center"
                app:fb_iconWidth="33dp"
                app:fb_rippleColor="@color/purple_200" />
            <com.github.nikartm.button.FitButton
                android:id="@+id/expndd_notes_btn_discard"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                app:fb_icon="@drawable/ic_discard"
                app:fb_iconColor="@color/black"
                app:fb_iconHeight="33dp"
                app:fb_iconPosition="center"
                app:fb_iconWidth="33dp"
                app:fb_rippleColor="@color/purple_200" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/expndd_notes_rcycler"
        android:layout_below="@id/expndd_notes_ll_btns_all"
        />
</RelativeLayout>