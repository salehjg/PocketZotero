<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">



    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="5mm"
        android:layout_height="5mm"
        card_view:cardBackgroundColor="@color/purple_700"
        android:id="@+id/itemsrowlayout_tile"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        card_view:cardCornerRadius="6dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_thesis"
            android:backgroundTint="@color/white"
            android:layout_margin="0.5mm"
            android:id="@+id/itemsrowlayout_img"
            android:foregroundGravity="center"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/itemsrowlayout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/itemsrowlayout_tile"
        android:layout_alignBottom="@id/itemsrowlayout_tile"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/itemsrowlayout_tile"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="ITEM NAME 1\nITEM NAME REST"
        android:textColor="@android:color/black" />

</RelativeLayout>