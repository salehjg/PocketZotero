<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0.5mm">


    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemsrowlayout_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        card_view:cardBackgroundColor="@color/gray"
        card_view:cardCornerRadius="6dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0.5mm"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="FIELD FIELD NAME:"
                android:background="@color/gray2"
                android:textStyle="bold"
                android:gravity="right"
                android:id="@+id/fieldsrowlayout_fieldname"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1.5mm"
                android:layout_weight="0.7"
                android:text="FIELD FIELD FIELD FIELD FIELD FIELD FIELD FIELD FIELD"
                android:textStyle="italic"
                android:gravity="left"
                android:id="@+id/fieldsrowlayout_fieldvalue"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>