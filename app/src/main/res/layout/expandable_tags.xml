<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/expndd_tags"
            android:layout_toLeftOf="@id/expndd_tags_ll_btns_all"
         >

            <EditText
                android:id="@+id/expndd_tags_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:hint="New Tag"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expndd_tags_ll_btns_all"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.github.nikartm.button.FitButton
                android:id="@+id/expndd_tags_btn_add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                app:fb_icon="@drawable/ic_add"
                app:fb_iconColor="@color/black"
                app:fb_iconHeight="33dp"
                app:fb_iconPosition="center"
                app:fb_iconWidth="33dp"
                app:fb_rippleColor="@color/purple_200" />
            <LinearLayout
                android:id="@+id/expndd_tags_ll_btns_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">
                <com.github.nikartm.button.FitButton
                    android:id="@+id/expndd_tags_btn_save"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    app:fb_icon="@drawable/ic_save"
                    app:fb_iconColor="@color/black"
                    app:fb_iconHeight="33dp"
                    app:fb_iconPosition="center"
                    app:fb_iconWidth="33dp"
                    app:fb_rippleColor="@color/purple_200" />
                <com.github.nikartm.button.FitButton
                    android:id="@+id/expndd_tags_btn_discard"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    app:fb_icon="@drawable/ic_discard"
                    app:fb_iconColor="@color/black"
                    app:fb_iconHeight="33dp"
                    app:fb_iconPosition="center"
                    app:fb_iconWidth="33dp"
                    app:fb_rippleColor="@color/purple_200" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/expndd_tags_recycler"
        />
</LinearLayout>