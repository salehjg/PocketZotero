<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <com.github.nikartm.button.FitButton
        android:id="@+id/row_attachment_file"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_marginEnd="5dp"
        app:fb_icon="@drawable/ic_file_html"
        app:fb_iconWidth="40dp"
        app:fb_iconHeight="44dp"
        app:fb_iconPosition="center"
        app:fb_rippleColor="@color/theme_dark_red_primary_color" />

    <com.github.nikartm.button.FitButton
        android:id="@+id/row_attachment_remove"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/row_attachment_file"
        android:layout_toEndOf="@id/row_attachment_file"
        app:fb_icon="@drawable/ic_remove"
        app:fb_iconColor="@color/md_red"
        app:fb_iconHeight="20dp"
        app:fb_iconPosition="center"
        app:fb_iconWidth="20dp"
        app:fb_rippleColor="@color/theme_dark_red_primary_color" />

</RelativeLayout>